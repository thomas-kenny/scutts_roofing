:javascript

  var serviceCards = document.querySelectorAll('.service-card')
  var serviceName = document.querySelector('.service-name')
  var serviceDescription = document.querySelector('.service-description')
  
  serviceCards.forEach((card) => {
    card.addEventListener('mouseover', showServiceName)
    card.addEventListener('mouseout', hideServiceName)
    card.addEventListener('click', toggleServiceDescription)

  })

  function showServiceName() {
    (this).querySelector('.service-name').classList.remove('lg:hidden')
  }

  function hideServiceName() {
    (this).querySelector('.service-name').classList.add('lg:hidden')
  }

  function toggleServiceDescription() {
    (this).querySelector('.service-description').classList.toggle('hidden')
  }
